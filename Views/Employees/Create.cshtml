@model Employee

<div class="d-grid justify-content-md-center">
    <form asp-action="Create" method="post" >
    <h1> Create User</h1>
        <div class="form-group row">
            <div class="col-6 mb-2">
                <label for="FirstName">First Name:</label>
                <input type="text" asp-for="FirstName" class="form-control">
            </div>
            <div class="col-6 mb-2">
                <label for="LastName">Last Name:</label>
                <input type="text" asp-for="LastName" class="form-control">
            </div>
            <div class="col-12 mb-2">
                <label for="Address">Address:</label>
                <input type="text" asp-for="Address" class="form-control">
            </div>
            <div class="col-12 mb-2">
                <label for="Document">Document:</label>
                <input type="text" asp-for="Document" class="form-control">
            </div>
            <div class="col-6 mb-2">
                <label for="Phone">Phone:</label>
                <input type="text" asp-for="Phone" class="form-control">
            </div>
            <div class="col-6 mb-2">
                <label for="Position">Position:</label>
                <input type="text" asp-for="Position" class="form-control">
            </div>
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button class="btn btn-secondary me-md-2" type="submit">Send</button>
        </div>
    </form>
</div>

